@using Microsoft.AspNetCore.Identity
@using web_app.Models.Repository;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model web_app.Models.View.HomeViewModel.PaymentViewModel
@{
    ViewData["Title"] = "Payment";
}
@section CSS{
    <link href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" rel="stylesheet" />
}
<style>
    body{
        /*!!IMPORTANT forces grid display which stops headers & footers moving around*/
        min-height: 100vh;
        display: grid;
        grid-template-rows: 1fr auto;
    }
</style>
@if (SignInManager.IsSignedIn(User))
{
    @if (Model.AspNetUser is not null && Model.AspNetUser.Id is not null)
    {
        <partial name="/Views/Shared/_AuthNavPartial.cshtml" />
        @if (!string.IsNullOrEmpty(Context.Request.Query["Message"]))
        {
            <section class="h-100 h-custom" style="background-color: #eee;">
                <div class="container pt-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col">
                            <div class="alert alert-danger">@Context.Request.Query["Message"]</div>
                        </div>
                    </div>
                </div>
            </section>
        }
        @if (Model.AppCheckout is not null)
        {
            <section class="h-100 h-custom" style="background-color: #eee;">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col">
                            <div class="card">
                                <div class="card-body p-4">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="card p-3">
                                                <div class="row">
                                                    <div class="col-lg-4 h5 mb-3">
                                                        Payment method
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="card">
                                                            <div class="card-body p-4">
                                                                <form class="needs-validation" asp-controller="Home" asp-action="ProcessPayment" method="post">
                                                                <div class="row">
                                                                    <div class="col-md-12 mb-3">
                                                                        <label asp-for="Form.PaymentMethod" class="form-label">Payment</label>
                                                                        <select asp-for="Form.PaymentMethod" class="form-select">
                                                                            <option value="">Choose...</option>
                                                                            <option>Card</option>
                                                                            <option>Cash</option>
                                                                        </select>
                                                                        <span asp-validation-for="Form.PaymentMethod" class="form-label"></span>
                                                                    </div>
                                                                    <div class="col-12">
                                                                        <label asp-for="Form.Comment" class="form-label">Comment <span class="text-muted">(Optional)</span></label>
                                                                        <input asp-for="Form.Comment" class="form-control">
                                                                    </div>
                                                                        <div class="col-12">
                                                                            <button class="w-100 btn btn-primary btn-lg mt-4" type="submit">Save</button>
                                                                        </div>
                                                                </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="h-100 h-custom" style="background-color: #eee;">
                <div class="container pb-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col">
                            <div class="card">
                                <div class="card-body p-4">
                                    <div class="row">
                                        @if (Model.AppCheckout.DeliveryMethod.Equals("DELIVERY"))
                                        {
                                            <div class="col-lg-6">
                                                <div class="h5 text-xl-start">
                                                    <a asp-controller="Home" asp-action="Delivery" class="text-body">Delivery</a>
                                                </div>
                                            </div>
                                        }
                                        else if (Model.AppCheckout.DeliveryMethod.Equals("PICK"))
                                        {
                                            <div class="col-lg-6">
                                                <div class="h5 text-xl-start">
                                                    <a asp-controller="Home" asp-action="Order" class="text-body">Order</a>
                                                </div>
                                            </div>
                                        }
                                        else if (Model.AppCheckout.DeliveryMethod.Equals("DINE"))
                                        {
                                            <div class="col-lg-6">
                                                <div class="h5 text-xl-start">
                                                    <a asp-controller="Home" asp-action="Order" class="text-body">Order</a>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-lg-6">
                                                <div class="h5 text-xl-start">
                                                    Error
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
        else
        {
            <section class="h-100 h-custom" style="background-color: #eee;">
                <div class="container pb-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col">
                            <div class="card">
                                <div class="card-body p-4">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="h5 text-xl-start">
                                                Go to <a asp-controller="Home" asp-action="Checkout" class="text-body">Checkout</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
        <partial name="/Views/Shared/_AuthFooterPartial.cshtml" />
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            User is already signed in. But no User ID. Contact Admin.
        </div>
    }
}